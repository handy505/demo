set encoding=utf-8
set fileencodings=utf-8,cp950
set nocompatible
set nu
set hlsearch
set ic
set autoindent
set cursorline
set number
set expandtab
set shiftwidth=4
set tabstop=4
syntax on
filetype off
colorscheme desert

nnoremap <F2> :NERDTreeToggle<CR>

set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()
Plugin 'gmarik/Vundle.vim'
Plugin 'jnurmine/Zenburn'
Plugin 'scrooloose/nerdtree'
call vundle#end()

filetype plugin indent on

